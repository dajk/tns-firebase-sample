<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar title="Ideas">
      <ActionBar.actionItems>
        <ActionItem text="Share" tap="share" ios.position="right" />
        <ActionItem text="Logout" tap="logout" ios.position="right" />
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="auto, *" columns="2*, *">
    <TextField id="idea" text="{{ idea }}" hint="Enter a idea item" row="0" col="0" />
    <Button text="Add" tap="add" row="0" col="1" />
    <ListView items="{{ ideaList }}" id="ideaList" row="1" colSpan="2">
      <ListView.itemTemplate>
        <GridLayout columns="*, auto" tap="onTap">
          <Label text="{{ title }}"/>
          <Image src="res://ic_menu_delete" ios:visibility="collapsed" col="1" tap="delete" />
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>
    <ActivityIndicator busy="{{ isLoading }}" rowSpan="2" colSpan="2" />
  </GridLayout>
</Page>
